<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<link rel="stylesheet" href="/styles.css">
</head>
<body>
	<%-include('./partials/navbar')%>
	  <% if (errors && errors.length > 0) { %>
	    <ul style="color: red;">
	      <% errors.forEach(error => { %>
	        <li><%= error.msg %></li>
	      <% }) %>
	    </ul>
	  <% } %>

	<form action="/addCategory" method="POST" class="room-form">
		<div class="form-group">
		  <label for="categoryName">Category Name:</label>
		  <input type="text" id="categoryName" name="categoryName" value="<%= typeof oldInput !== 'undefined' ? oldInput.categoryName : '' %>" required>
	  
		  <label for="categoryDescription">Category Description:</label>
		  <input type="text" id="categoryDescription" name="categoryDescription" value="<%= typeof oldInput !== 'undefined' ? oldInput.categoryDescription : '' %>" required>

          <label for="basePrice">Average Price:</label>
		  <input type="text" id="basePrice" name="basePrice" value="<%= typeof oldInput !== 'undefined' ? oldInput.basePrice : '' %>" required>
		</div>
		<button type="submit" class="submit-btn">Add Category</button>
	  </form>
</body>
</html>